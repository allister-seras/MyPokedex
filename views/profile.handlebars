<div class="row">
  <a> 
    <img src="/assets/teams.png">
  </a>
  <div class="col-auto" id="welcome-message">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4" id="pro-body">
  <div class="col-md-6">
    <h3>Create a New Team!</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <button type="submit" class="button large" id="create-button">Create</button>
      </div>
    </form>
  </div>

  {{#if team.length}}
  <div class="col-md-6 project-list">
    <h3>Current Teams:</h3>

    {{#each teams as |team|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{team.id}}">{{team.name}}</a></h4>
      </div>
      <div>
        {{> team}}
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{team.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
