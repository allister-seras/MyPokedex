<div class="row">
    <a href="/profile">
    <img src="/public/assets/mypokedex.png">
    </a>
  <div class="col-auto">
    <h2>Welcome, {{user_data.name}}!</h2>
  </div>
</div>
<div class="row mt-4" id="pro-body">
  <div class="col-md-6">
    <h3>Create a New Team!</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <button type="submit" class="button large" id="create-button">Create</button>
      </div>
    </form>
  </div>
  {{#if user_data.teams.length}}
  <div class="col-md-6 project-list">
    <h3>Current Teams:</h3>

    {{#each user_data.teams as |team|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{team.id}}">{{team.name}}</a></h4>
      </div>
      <div>
        {{> team}}
      </div>
      <div class="col-md-4">
        <button class="add btn btn-sm button success" id="{{team.id}}">ADD</button>
        <button class="remove btn btn-sm btn-danger" id="{{team.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>


