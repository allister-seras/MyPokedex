<section class="container">
  <h3 class="team">{{team.name}}</h3>
  <section class="flex-row justify-center">
    <!-- For each pokemon that belongs to this team, the painting-details partial is used to render each painting's data -->
    {{#each team.pokemon as |pokecard|}}
    {{> pokecard}}
    {{/each}}
  </section>
</section>